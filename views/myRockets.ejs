
<%- include('templates/head',{myTitle:"Rockets"}) %>
<%- include('templates/navbar') %>

	<div class="col-lg-12 text-center">
	    <h1 class="mt-5">Type your rocket name:</h1>
	</div>

	<div class="form-group col-lg-12 text-center">
		<label for="usr ">Name:</label>

		<%if (modify==false) {%>
			<div class="row col-lg-6 mx-auto" id = "addRocketForm">
				<input type="text" class="form-control col-sm-10 " id="inputUser" name = "rocketID">
				<button type="button" onClick class=" col-lg-2 btn btn-success" id="addRocketAccount">Add rocket</button>
			</div>
		<%} else { %>
			<div class="row col-lg-6 mx-auto" id = "addRocketForm">
				<p class="form-control m-0 col-sm-9 " id="inputUserRocket" name = "rocketID">
				<%=rocketID%>
				</p>
				<button type="button" onClick class=" col-lg-3 btn btn-primary" id="addRocketAccount">Send Changes</button>
			</div>
		<%}%>

	</div>

	<div class="col-sm-3 mb-5 mx-auto">
	    <a data-toggle="collapse" href="#collapseExample1" role="button" aria-expanded="true" aria-controls="collapseExample1" class="btn btn-primary btn-block py-2 shadow-sm with-chevron">
	       	<p class="d-flex align-items-center justify-content-between mb-0 px-3 py-2">
	       		<strong class="text-uppercase" id = "myRocketName">
	       			ROCKET
	       		</strong><i class="fa fa-angle-down"></i>
	       	</p>
	    </a>
	    <div id="collapseExample1" class="collapse shadow-sm show">
	    	<div class="card">
	      		<div class="card-body" id="rocketInfo">
	           		
	           	</div>
	       	</div>
	    </div>
	</div>

<%- include('templates/footer') %>